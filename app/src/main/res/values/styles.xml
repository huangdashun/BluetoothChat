<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_chat_text">
        <item name="android:textSize">18sp</item>
        <item name="android:password">true</item>
    </style>

    <style name="style_target_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_date_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFCDCACA</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="style_username_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_common_btn">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>

    </style>
    <!--下拉框的主题-->
    <style name="MyDialogStyleTop" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
    </style>

    <!--没有title的主题-->
    <style name="NoTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>
</resources>
